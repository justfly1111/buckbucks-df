interface	= 	"lo1";
host.hostname = "$name.justfly.live";
path = "/jails/services/$name";
ip4.addr	=	192.168.1.$ip;
mount.fstab	=	"/jails/config/$name.fstab"

exec.start	=	"/bin/sh /etc/rc";
exec.stop	=	"/bin/sh /etc/rc.shutdown";
exec.clean;
exec.consolelog = "/var/log/jail_${name}_console.log";

allow.chflags;
allow.mount.devfs;
mount.devfs;
allow.mount.nullfs;
allow.sysvipc;
allow.mount.procfs;
allow.mount.fdescfs;
devfs_ruleset= "9";
enforce_statfs=1;
persist;


ubuntu-jail {
	$ip			  = 102";
	path	 	  = "/compat/ubuntu";
	exec.start	  =	"/bin/true";
	exec.stop	  = "/bin/true";
	allow.mount;
	allow.mount.zfs;
	allow.mount.bpf;
	allow.raw_sockets;
}
