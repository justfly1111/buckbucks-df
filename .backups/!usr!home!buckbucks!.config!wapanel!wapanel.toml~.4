[[panel]]
	position = "left"
	width = 16

	[[panel.applet]]
		name = "app-finder"

		icon_height = -1
		flat = true

		popover_width = -1
		popover_height = -1

		user_manager = "mugshot"
		settings = "wcm"
		file_manager = "nemo $HOME"

		[panel.applet.logout]
			shutdown = "wlogout"
			restart = "wlogout"
			logout = "wlogout"
			suspend = "wlogout"
			hibernate = "wlogout"
			lock = "swaylock"

	[[panel.applet]]
		name = "task-switcher"
		[panel.applet.mode.scroll]
			[panel.applet.mode.scroll.button]
				gap = 8

	[[panel.applet]]
		name = "system-tray"

	[[panel.applet]]
		name = "volume-control"
		flat = true
		icon_height = 16

	[[panel.applet]]
		name = "clock"


		