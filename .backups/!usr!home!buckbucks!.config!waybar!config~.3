{
    // PRIMARY TOP
    "output": "eDP-1",
    "layer": "top",
    "position": "top",
    "modules-left": ["sway/workspaces", "sway/mode"],
    "modules-center": ["custom/myweather", "custom/battery-warning"],
    "modules-right": ["clock", "backlight", "pulseaudio", "battery", "tray"],
    "sway/window": {
        "max-length": 50
    },
    "battery": {
        "format": "{icon} {capacity}%",
        "format-icons": ["Ó™ï", "Ó™ñ", "Ó™ó", "Ó™ò", "Ó™ô"],
        "on-click": "b=$(acpi -b) && notify-send \"$b\" --expire-time=3000",
        "tooltip": false
    },
    "custom/battery-warning": {
    "interval": 5,
    "exec": "$HOME/scripts/swayinfo/battery_warning.py"
    },
    "clock": {
        "interval": 1,
        "format": "{:%a, %d. %b  %H:%M:%S}",
        "on-click": "exec $HOME/scripts/swayinfo/calendar.py",
        "tooltip": false
    },
    "tray": {
	    "icon-size": 20,
	    "spacing": 4
	},
    "custom/scratchpad": {
        "interval": 1,
        "return-type": "json",
        "exec": "$HOME/scripts/swayinfo/config/waybar/modules/scratchpad.py",
        "on-click": "swaymsg scratchpad show",
        "escape": true
    },
	"custom/myweather": {
        "interval": 1800,
        "return-type": "text",
        "exec": "$HOME/scripts/swayinfo/weather.py -IdtS",
        "on-click": "$HOME/scripts/swayinfo/weather.py -D",
        "escape": true,
        "tooltip": false
