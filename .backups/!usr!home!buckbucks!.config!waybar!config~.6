[{
    // PRIMARY TOP
    "output": "eDP-1",
    "layer": "top",
    "position": "top",
    "modules-left": ["sway/workspaces", "sway/mode"],
    "modules-center": ["custom/myweather", "custom/battery-warning"],
    "modules-right": ["clock", "backlight", "pulseaudio", "battery", "tray"],
    "sway/window": {
        "max-length": 50
    },
    "battery": {
        "format": "{icon} {capacity}%",
        "format-icons": ["", "", "", "", ""],
        "on-click": "b=$(acpi -b) && notify-send \"$b\" --expire-time=3000",
        "tooltip": false
    },
    "custom/battery-warning": {
    "interval": 5,
    "exec": "/home/buckbucks/scripts/swayinfo/battery_warning.py"
    },
    "clock": {
        "interval": 1,
        "format": "{:%a, %d. %b  %H:%M:%S}",
        "on-click": "exec /home/buckbucks/scripts/swayinfo/calendar.py",
        "tooltip": false
    },
    "tray": {
	    "icon-size": 20,
	    "spacing": 4
	},
    "custom/scratchpad": {
        "interval": 1,
        "return-type": "json",
        "exec": "/home/buckbucks/scripts/swayinfo/config/waybar/modules/scratchpad.py",
        "on-click": "exec swaymsg scratchpad show",
        "escape": true
    },
	"custom/myweather": {
        "interval": 1800,
        "return-type": "text",
        "exec": "/home/buckbucks/scripts/swayinfo/weather.py -IdtS",
        "on-click": "/home/buckbucks/scripts/swayinfo/weather.py -D",
        "escape": true,
        "tooltip": false
    },
    "backlight": {
		"device": "intel_backlight",
		"format": "{icon} {percent}%",
		"format-icons": ["", "", "", "", ""],
		"on-scroll-up": "backlight +10",
		"on-scroll-down": "backlight -10"
	},
	"pulseaudio": {
		"format": "{icon} {volume}%",
		"format-bluetooth": "{volume}% {icon}",
		"format-muted": "",
		"format-icons": {
		    "headphones": "",
		    "handsfree": "",
		    "headset": "",
		    "phone": "",
		    "portable": "",
		    "car": "",
		    "default": ["", "", ""]
		},
		"scroll-step": 5,
		"on-click-right": "pavucontrol",
		"on-click": "mixer"
	}
}, {
    // PRIMARY BOTTOM
    "output": "eDP-1",
    "layer":	"top",
    "position": "bottom",
    "name": "waybar-bottom",
    "modules-center": ["network"],
    "modules-left": ["custom/menu", "custom/mediaplayer"],
    "modules-right": ["custom/cpu", "custom/bbswitch", "custom/swayinfo"],
    "sway/window": {
        "max-length": 50
    },
    "custom/menu": {
        "format": "  ",
        "on-click": "exec sirula",
        "tooltip": false
    },
    "custom/cpu": {
        "interval": 3,
        "return-type": "text",
        "exec": "/home/buckbucks/scripts/swayinfo/swayinfo.py -Cga",
        "escape": true
    },
    "custom/swayinfo": {
        "interval": 5,
        "return-type": "text",
        "exec": "/home/buckbucks/scripts/swayinfo/swayinfo.py -CtMfNu -N",
        "escape": true
    },
    "network": {
			"interval": 3,
			"interface": "lagg0",
			"format": "{ifname}",
			"format-wifi": "{essid} ({signalStrength}%) ",
			"format-ethernet": "{bandwidthUpBits} {bandwidthDownBits}",
			"format-disconnected": "", //An empty format will hide the module.
			"tooltip-format": "{ifname}",
			"tooltip-format-wifi": "{essid} ({signalStrength}%) ",
			"tooltip-format-ethernet": "{ifname} {ipaddr}",
			"tooltip-format-disconnected": "Disconnected",
			"max-length": 50
    },
    "custom/netinfo": {
        "interval": 3,
        "return-type": "text",
        "exec": "/home/buckbucks/scripts/swayinfo/swayinfo.py -Ck -N",
        "tooltip": false,
        "escape": true
    },
    "custom/bbswitch": {
        "interval": 5,
        "return-type": "text",
        "exec": "/home/buckbucks/scripts/swayinfo/bbswitch",
        "escape": true
    },
