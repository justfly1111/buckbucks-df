* {
  font-size: 12px;
  font-family: "Terminus (TTF)";
}

window#waybar {
    background: rgba(0,0,0,0);
}
#workspaces {
  color: #FFF;
  background: #0FF;
  border-top-right-radius: 10px;
  border-bottom-right-radius: 10px;
  border-top-left-radius: 10px;
  border-bottom-left-radius: 10px;
  color: #c5c8c6;
}

#battery {
  color: #FFF;
  background: #00F;
  margin: 3px 0px 3px 0px;
  background: #1d1f21;
  padding: 5px;
  color: #c5c8c6;
}

#custom-quit {
  margin: 3px 3px 3px 0px;
  padding: 5px 7px 5px 5px;
  border-top-right-radius: 10px;
  border-bottom-right-radius: 10px;
  border-right: 2px solid #1d1f21;
  border-top: 2px solid #1d1f21;
  border-bottom: 2px solid #1d1f21;
  background: #F00;
  color: #FFF;
}

#clock {
  margin: 3px 0px 3px 3px;
  padding: 5px;
  color: #000000;
  background: #014801;
  border-top-left-radius: 10px;
  border-bottom-left-radius: 10px;
  color: #c5c8c6;
}

#custom-keyboard {
  background: #1d1f21;
  color: #FFF;
  background: #F0F;
  padding: 5px 5px 5px 7px;
  margin: 3px 0px 3px 3px;
  border-top-left-radius: 10px;
  border-bottom-left-radius: 10px;
}

#custom-media {
  color: #FFF;
  background: #0AA;
  margin: 3px;
  padding: 5px 7px 5px 7px;
  border-radius: 10px;
}
#custom-myweather {
  color: #FFF;
  background: #FAF;
  margin: 3px;
  padding: 5px 7px 5px 7px;
  border-radius: 10px;
}
#custom-battery-warning {
  margin: 3px;
  padding: 5px 7px 5px 7px;
  border-radius: 10px;
  color: #FFF;
  background: #FAF;
}

#pulseaudio {
  margin: 3px 3px 3px 0px;
  padding: 5px 7px 5px 5px;
  background: #90E090;
  border-top-right-radius: 10px;
  border-bottom-right-radius: 10px;
  color: #000000;
}

#custom-network {
  background: #90E090;
  color: #000000;
  margin: 3px 0px 3px 0px;
  padding: 5px;
}
window#waybar.waybar-bottom {
    background-color: #151515;
    border-bottom: 0px;
    color: #b47474;
	font-family: DejaVu sans;
    transition-property: background-color;
    transition-duration: .5s;
}

window#waybar.hidden {
    opacity: 0.2;
}

